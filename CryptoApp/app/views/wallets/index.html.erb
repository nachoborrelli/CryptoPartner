<h1>Your wallet</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  <% if @wallet.wallet_coins.empty?%>
    <p> You have no coins.</p>
  <% else %>
    <p>Coins:</p>
    <% @wallet.wallet_coins.each do |wc| %>
      <tr>
        <td> <%= wc %></td>
      </tr>
    <% end %>
  <% end %>
  </tbody>
</table>

<%= link_to 'New Transaction', new_transaction_path %>
<%= link_to 'Add Coins', add_wallet_coin_path	 %>
<%= link_to 'Add USD', add_usd_wallet_coin_path	 %>